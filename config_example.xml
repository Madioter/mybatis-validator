<!--配置文件说明-->

<bean id="validator" class="com.madioter.validator.mybatis.Validator" init-method="validator">
    <property name="sqlSessionFactory" ref="sqlSessionFactory"/>
    <property name="driverClass" value="com.mysql.jdbc.Driver" />
    <property name="jdbcUrl" value="jdbc:mysql://localhost:3306/information_schema" />
    <property name="user" value="root" />
    <property name="password" value="root" />
    <property name="tableSchema" value="local"/>
    <property name="validatorList">
        <list>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckInsertIfTagEquals" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckStatementColumnExist" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckResultMapPropertyExist" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckStatementPropertyExist" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckDeleteStatementRefuse" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckStatementTableExist" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckUpdateSetTagType" scope="prototype"></bean>
            <bean class="com.madioter.validator.mybatis.validate.impl.CheckColumnRepeat" scope="prototype"></bean>
        </list>
    </property>
</bean>